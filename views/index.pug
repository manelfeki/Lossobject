doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description', content='')
    meta(name='author', content='')
    title 1 List Of Lost Objects
    // Bootstrap core CSS
    Style
        include css/bootstrap.min.css
        include css/1-col-portfolio.css
    script
        include vendor/jquery/jquery.min.js
        include vendor/bootstrap/js/bootstrap.bundle.min.js

  body
    // Navigation
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top
      .container
        a.navbar-brand(href='#') Lost And Found
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarResponsive', aria-controls='navbarResponsive', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarResponsive.collapse.navbar-collapse
          ul.navbar-nav.ml-auto
            li.nav-item.active
              a.nav-link(href='all')
                | Home
                span.sr-only (current)
            li.nav-item
              a.nav-link(href='add') Add an object
            li.nav-item
              a.nav-link(href='#') Contact
    // Page Content
    .container
      // Page Heading
      h1.my-4
        | Page Heading
      // Json data
      each lostobject in data
        .row
            .col-md-7
                a(href='#')
                    img.img-fluid.rounded.mb-3.mb-md-0(src='https://static4-surfdome.global.ssl.fastly.net/brand_logos/16.png', alt='')
            .col-md-5
             h3.title=lostobject.name
             p
                | #{lostobject.lossAddress}
                br
                | #{lostobject.contact}
        hr 
      // Pagination
      ul.pagination.justify-content-center
        li.page-item
          a.page-link(href='#', aria-label='Previous')
            span(aria-hidden='true') «
            span.sr-only Previous
        li.page-item
          a.page-link(href='#') 1
        li.page-item
          a.page-link(href='#') 2
        li.page-item
          a.page-link(href='#') 3
        li.page-item
          a.page-link(href='#', aria-label='Next')
            span(aria-hidden='true') »
            span.sr-only Next
    // /.container
    // Footer
    footer.py-5.bg-dark
      .container
        p.m-0.text-center.text-white Copyright © Lost Object 2018
      // /.container

